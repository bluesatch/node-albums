<%- include('../partials/header'); %>

<main class="main" id="albumMain">
    <div class="container">
        <div class="row">
            <% data.forEach(item => { %>
                <div class="col-md-3">
                    <figure class="figure album-figure">
                        <img src="/images/<%= item.album_cover %>" alt="image of <%= item.album_cover %>" class="figure-img img-fluid album-cover-img rounded">
                        <figcaption class="figure-caption">
                            <%= item.title %> | 
                            <% if (item.band == '') { %>
                                <a href="/artist/<%= item.artist_id %>">
                                    <% if (item.alias == '') { %>
                                        <%= item.fName %> <%= item.lName %>
                                    <% }  else { %>
                                        <%= item.alias %>
                                    <% } %>
                                </a>
                            <% } else { %>
                                <a href="/band/<%= item.band_id %>">
                                    <%= item.band %>
                                </a>
                            <% } %>
                        </figcaption>
                    </figure>
                </div>
            <% }) %>
        </div>
    </div>
</main>
<%- include('../partials/footer'); %>